// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "smart_meter_analysis",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

    // Install Quarto CLI and Chromium
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
            "installChromium": true
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "chromium"
        },
        "ghcr.io/guiyomh/features/just:0.1.0": {
            "version": "1.40.0"
        }
    },

    // Use 'postCreateCommand' to run commands after the container is created.
    // This is used to install post-commit hooks, uv, virtualenv, and dependencies.
    "postCreateCommand": "./.devcontainer/postCreateCommand.sh",

    // Tell quarto to use Python interpreter in the uv virtual environment.
    "containerEnv": {
        "QUARTO_PYTHON": "/workspaces/smart_meter_analysis/.venv/bin/python"
    },

    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "editorconfig.editorconfig",
                "quarto.quarto",
                "nefrob.vscode-just-syntax"
            ],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/smart_meter_analysis/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/smart_meter_analysis/.venv/bin/pytest"
            }
        }
    }
}
